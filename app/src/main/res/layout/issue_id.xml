<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/card_color"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fitsSystemWindows="true"
       android:layout_gravity="center_vertical"
       android:gravity="center_vertical"
       android:padding="10dp"
       >

      <!--<android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:minHeight="?attr/actionBarSize"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:titleTextColor="@android:color/white"
          android:background="@color/green"
          >
-->
      <LinearLayout
          android:id="@+id/back_feed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:padding="10dp"
          android:background="@drawable/ripple_effect"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          >

         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_gravity="center_vertical"
             android:src="@drawable/ic_go_back_left_arrow_"
             android:background="?attr/selectableItemBackgroundBorderless"

             />

      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="7NINE Id"
          android:textSize="20dp"
          android:layout_marginTop="5dp"
          android:layout_marginHorizontal="15dp"
          android:fontFamily="@font/segoeui"
          android:textColor="#fff"
          android:textAllCaps="true"
          android:id="@+id/lang_title" />

      <!--
                </android.support.v7.widget.Toolbar>
      -->

   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:weightSum="100"
       android:orientation="vertical"
       android:layout_marginTop="20dp"
       android:background="@color/card_color"
       >
   <LinearLayout
       android:id="@+id/profile_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingHorizontal="20dp"
       android:orientation="vertical"
       android:layout_marginBottom="30dp"
       >

      <LinearLayout
          android:id="@+id/prof_tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@drawable/border_empty_curve"
          android:paddingHorizontal="10dp"
          android:layout_marginHorizontal="50dp"
          android:weightSum="100">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingVertical="15dp"
             android:gravity="center"
             android:weightSum="20"
             >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:src="@drawable/ecommerce" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FarmPe"
                android:textSize="18dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:textAllCaps="true"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_gravity="center"

             >

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:civ_border_color="#fff"
                app:civ_border_width="1dp"
                android:src="@drawable/avatarmale"/>

         </LinearLayout>


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/segoeui"
             android:text="JagdishKumar"
             android:textColor="@color/black"
             android:layout_gravity="center"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:textSize="16dp" />




         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingVertical="5dp"
             android:gravity="center"
             android:weightSum="10"
             >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Partner id : "
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1026"
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />




         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingVertical="5dp"
             android:gravity="center"
             android:weightSum="10"
             >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group : "
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknow"
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />




         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingVertical="5dp"
             android:gravity="center"
             android:weightSum="10"
             >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number : "
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9986485675"
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />




         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingVertical="5dp"
             android:gravity="center"
             android:weightSum="10"
             android:layout_marginBottom="20dp"
             >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency No : "
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1026456123"
                android:textSize="16dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/black"
                />




         </LinearLayout>



      </LinearLayout>


   </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingVertical="15dp"
          android:orientation="vertical"
          >


     <TextView
         android:id="@+id/permit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_weight="10"
         android:fontFamily="@font/segoeui"
         android:text="Permit Document"
         android:drawableRight="@drawable/ic_right_angle_arrow"
         android:textColor="#fff"
         android:layout_marginRight="10dp"
         android:textSize="18dp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:text="Show To Police"
            android:textSize="12dp"
             android:fontFamily="@font/segoeui"
             android:layout_marginLeft="20dp"
             android:textColor="@color/grey_text"/>

      </LinearLayout>











      </LinearLayout>


</LinearLayout>
