                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/seperator"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
